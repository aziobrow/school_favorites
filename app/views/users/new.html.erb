<div class='new-user-form'>
<%= form_for @user do |f| %>
  <div class='form-label'><%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.submit "Create Account", :class => 'button' %></div>
<% end %>
</div>
